{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "mapRoot": "",
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outDir": "./js",
    "rootDir": "./ts",
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "",
    "target": "es6",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "filesGlob": [
    "**/*.ts",
    "!node_modules/**/*"
  ],
  "exclude": [
    "./js",
    "node_modules",
    "typings/global",
    "typings/global.d.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
